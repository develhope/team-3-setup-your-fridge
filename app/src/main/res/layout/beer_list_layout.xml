<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/beer_list_layout"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    app:contentPaddingTop="16sp"
    app:contentPaddingRight="22sp"
    app:contentPaddingLeft="18sp"
    app:contentPaddingBottom="16sp"
    android:layout_marginTop="16sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/constraint_beer"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="88sp"
            android:layout_height="139sp"
            android:id="@+id/img_beer_list"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="4sp"
            android:layout_marginTop="4sp" />

        <TextView
            android:id="@+id/title_beer_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:maxWidth="172sp"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintLeft_toRightOf="@id/img_beer_list"
            android:layout_marginStart="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/qnt_beer_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/title_beer_list"
            app:layout_constraintLeft_toRightOf="@id/img_beer_list"
            android:layout_marginStart="14sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/dsc_beer_list"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/qnt_beer_list"
            app:layout_constraintLeft_toRightOf="@id/img_beer_list"
            android:layout_marginStart="14sp"
            android:layout_marginTop="9sp"
            android:textColor="@color/black"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/star_check"
            android:button="@drawable/custom_check_fav"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:layout_width="155dp"
            android:layout_height="40dp"
            android:layout_marginTop="12sp"
            android:backgroundTint="#2EC200"
            android:fontFamily="@font/poppins_medium"
            android:text="Vai al dettaglio"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/img_beer_list"
            app:layout_constraintTop_toBottomOf="@id/dsc_beer_list"
            android:layout_marginStart="14sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>